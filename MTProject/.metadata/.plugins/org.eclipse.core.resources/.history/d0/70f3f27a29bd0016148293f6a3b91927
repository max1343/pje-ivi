package widget;

import java.awt.Graphics;
import java.awt.Graphics2D;

import javax.swing.JPanel;

import event.ComponentMap;
import mygeom.Path;
import mygeom.Point2;
import tuio.MTedt;

public class MTSurface extends JPanel {
	MTedt m ;
	Path path;
	MTContainer mtc;
	ComponentMap cm;
	
	public MTSurface() {
		super();
		cm = new ComponentMap();
		m = new MTedt(this);
		path = new Path();
		mtc = new MTContainer();
	}
	
	public void paintComponent(Graphics g) {
		super.paintComponent(g);
		System.out.println("DEBUG");
		Graphics2D g2 = (Graphics2D) g;
		// drawing instructions with g2.
		path.draw(g2);
		mtc.draw(g2);
	}

	public MTedt getMTedt(){
		return this.m;
	}
	
	public void add(MTComponent comp){
		mtc.add(comp);
	}


	public synchronized void addCursor(int id, Point2 p){
		System.out.println("id "+ id+ "coordonn�es x "+ p.getX() + "y "+ p.getY());
		p.setX(p.getX()*500);
		p.setY(p.getY()*500);
		path.add(p);
		repaint();
	}

	public synchronized void updateCursor(int id, Point2 p){
		System.out.println("id "+ id+ "coordonn�es x "+ p.getX() + "y "+ p.getY());
		p.setX(p.getX()*500);
		p.setY(p.getY()*500);
		path.add(p);
	}
	
	
	public synchronized void removeCursor(int id, Point2 p){
		System.out.println("id "+ id+ "coordonn�es x "+ p.getX() + "y "+ p.getY());
		p.setX(p.getX()*500);
		p.setY(p.getY()*500);
		path.add(p);
	}
	
}
